{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [ "dom", "es2017" ],
    "outDir": "",
    "sourceMap": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "removeComments": false,
    "moduleResolution": "node"
  },
  "include": [
    "ts/**/*",
    "@types/**/*"
  ]
}
